---
// Education.astro
const education = [
    {
        school: "University of California, Santa Cruz",
        degree: "B.S. Computer Science",
        year: "Expected 2027",
        logo: `${import.meta.env.BASE_URL}/logos/UCSC.png`,
        honors: ["Dean's Honors", "Dean's Undergraduate Award"],
        gpa: "4.0/4.0"
    }
];
---

<section class="opacity-0 h-full">
  <h3 class="flex items-center gap-3 text-brand-400 font-mono text-xs tracking-[0.2em] mb-8 uppercase">
    <i class="pixelart-icons-font-book-open"></i> Education
  </h3>
  
  <div class="flex flex-col border-t border-brand-800 transition-colors h-full">
    {education.map((item) => (
      <div class="group flex flex-col py-6 border-b border-brand-800 hover:bg-brand-800/30 transition-all duration-300 normal-case px-2 -mx-2 rounded-sm cursor-default">
        <div class="flex items-center justify-between gap-4 mb-2">
            <span class="text-brand-100 font-medium group-hover:text-amber-500 transition-colors flex items-center gap-3">
                <img src={item.logo} alt={`${item.school} logo`} class="w-6 h-6 rounded-sm" loading="lazy" />
                {item.school}
            </span>
            <span class="text-brand-500 font-mono text-[10px] uppercase tracking-wider whitespace-nowrap">{item.year}</span>
        </div>
        <div class="flex flex-col gap-1 ml-9">
            <p class="text-brand-400 text-sm leading-relaxed font-medium">{item.degree}</p>
            <p class="text-brand-400 text-sm leading-relaxed">GPA: {item.gpa}</p>
            {item.honors.map(honor => (
                <p class="text-brand-400 text-sm leading-relaxed">â€¢ {honor}</p>
            ))}
        </div>
      </div>
    ))}
  </div>
</section>
