    {
        title: "DeepSight",
        description: "Real-time deepfake detection web app built for ACMHacks 2025. Flagged AI-generated video via per-frame analysis.",
        tech: "PyTorch / FastAPI / React / OpenCV",
        link: "https://github.com/Sayan090807/DeepSight",
        year: "2025"
    },
    {
        title: "Gazr",
        description: "Privacy-first, on-device Chrome extension tracking posture strictly client-side to promote digital wellness.",
        tech: "JavaScript / React / MediaPipe",
        link: "https://github.com/Sayan090807/gazr",
        year: "2026"
    },
    {
        title: "Handwriting LiveOCR",
        description: "Live convolutional neural network distinguishing handwritten digits on webcam feed with ~98% accuracy.",
        tech: "Python / TensorFlow / Keras",
        link: "https://github.com/Sayan090807/handwriting-liveocr",
        year: "2025"
    },
    {
        title: "Pathfinding Visualizer",
        description: "Interactive graph search algorithms visualization built in C++ and SFML. Evaluates A*, BFS, DFS over drawn obstacles.",
