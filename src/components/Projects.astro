<section class="opacity-0 h-full flex flex-col">
  <h3 class="flex items-center gap-3 text-brand-400 font-mono text-xs tracking-[0.2em] mb-8 uppercase">
    <i class="pixelart-icons-font-folder"></i> Projects
  </h3>
  
  <div class="flex flex-col border-t border-brand-800 transition-colors h-full">
    {projects.map((project) => (
      <a 
        href={project.link} 
        target="_blank" 
        rel="noopener noreferrer"
        class="group flex flex-col sm:flex-row sm:items-baseline gap-2 sm:gap-6 py-6 border-b border-brand-800 hover:bg-brand-800/30 transition-all duration-300 normal-case px-2 -mx-2 rounded-sm"
      >
        <div class="flex flex-col sm:w-1/3 gap-1">
            <span class="text-brand-100 font-medium group-hover:text-amber-500 transition-colors">{project.title}</span>
            <span class="text-brand-500 font-mono text-[10px] uppercase tracking-wider">{project.tech} &nbsp;&middot;&nbsp; {project.year}</span>
        </div>
        <div class="sm:w-2/3 flex justify-between items-center gap-4">
            <p class="text-brand-400 text-sm leading-relaxed">{project.description}</p>
            <div class="flex items-center gap-2 text-brand-500 group-hover:text-amber-500 transition-colors border border-brand-800 group-hover:border-amber-500/50 rounded-sm px-3 py-1.5 text-[10px] uppercase font-mono tracking-wider shrink-0 bg-brand-900 group-hover:bg-brand-800">
                <i class="pixelart-icons-font-github text-lg"></i> Code
            </div>
        </div>
      </a>
    ))}
  </div>
</section>
