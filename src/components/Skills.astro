---
// Skills.astro
const skills = [
    {
        category: "Languages",
        items: [
            { name: "Python", icon: "python" },
            { name: "JavaScript", icon: "javascript" },
            { name: "Rust", icon: "rust" },
            { name: "C", icon: "c" },
            { name: "C++", icon: "cplusplus" }
        ]
    },
    {
        category: "Frameworks & Libraries",
        items: [
            { name: "PyTorch", icon: "pytorch" },
            { name: "TensorFlow", icon: "tensorflow" },
            { name: "Pandas", icon: "pandas" },
            { name: "NumPy", icon: "numpy" },
            { name: "scikit-learn", icon: "scikitlearn" }
        ]
    },
    {
        category: "Tools",
        items: [
            { name: "Docker", icon: "docker" },
            { name: "Git", icon: "git" },
            { name: "Jupyter", icon: "jupyter" },
            { name: "Google Colab", icon: "googlecolab" }
        ]
    }
];

const brandColor = "cbd5e1"; // brand-200 hex
---

<section class="opacity-0 h-full flex flex-col">
  <h3 class="flex items-center gap-3 text-brand-400 font-mono text-xs tracking-[0.2em] mb-8 uppercase">
    <i class="pixelart-icons-font-code"></i> Skills & Tools
  </h3>
  
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-8 border-t border-brand-800 pt-6 h-full content-start">
    {skills.map((group) => (
      <div class="flex flex-col gap-4">
        <h4 class="text-brand-500 font-mono text-[10px] uppercase tracking-widest border-b border-brand-800 pb-2">{group.category}</h4>
        <ul class="flex flex-col gap-3">
            {group.items.map((skill) => (
                <li class="flex items-center gap-3 text-sm text-brand-300 font-sans group hover:text-brand-100 transition-colors cursor-default">
                    <img 
                        src={`https://cdn.simpleicons.org/${skill.icon}/${brandColor}`} 
                        alt={`${skill.name} icon`}
                        class="w-4 h-4 opacity-70 group-hover:opacity-100 group-hover:drop-shadow-[0_0_8px_rgba(245,158,11,0.5)] transition-all duration-300"
                        loading="lazy"
                    />
                    {skill.name}
                </li>
            ))}
        </ul>
      </div>
    ))}
  </div>
</section>
